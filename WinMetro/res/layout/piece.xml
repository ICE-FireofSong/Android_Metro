<?xml version="1.0" encoding="utf-8"?>
<com.vep.widget.Piece xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/warp_wh_style"
    android:background="#000000"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_ico"
        style="@style/warp_wh_style"
        android:layout_centerInParent="true"
        android:contentDescription="@string/img_png" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/tv_title"
        style="@style/warp_wh_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/mWhite" />

    <TextView
          android:textSize="12sp"
        android:id="@+id/tv_style"
        style="@style/warp_wh_style"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_title"
        android:singleLine="true"
        android:textColor="@color/mWhite" />

</com.vep.widget.Piece>